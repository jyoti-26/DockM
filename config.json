{
  "type": "array",
  "properties": [
    {
      "key": "cluster",
      "description": "DockM properties",
      "type": "array",
      "properties": [
        {
          "key": "name",
          "label": "name",
          "description": "The name of the DockM cluster",
          "type": "string",
          "default": "dockM cluster",
          "required": "yes"
        },
        {
          "key": "description",
          "label": "description",
          "description": "Description DockM cluster",
          "type": "string",
          "default": "dockM cluster",
          "required": "yes"
        },
        {
          "key": "vxnet",
          "label": "vxnet",
          "description": "Choose a vxnet to join",
          "type": "string",
          "default": "",
          "required": "yes"
        },
        {
          "key": "master",
          "label": "master ",
          "description": "master properties",
          "type": "array",
          "properties": [
			{
              "key": "cpu",
              "label": "CPU",
              "description": "CPUs of each node",
              "type": "integer",
              "default": 4,
              "range": [
                2,
                4,
                8
              ],
              "required": "yes"
            },
			{
              "key": "memory",
              "label": "memory_label",
              "description": "memory_description",
              "type": "integer",
              "default": 2048,
              "range": [
                1024,
                2048,
                4096,
                8192,
                16384,
                32768,
                49152,
                65536
              ],
              "required": "yes"
            },
			
			{
              "key": "count",
              "label": "count",
              "description": "Number of master for the cluster to create",
              "type": "integer",
              "default": 1,
              "min":1,
              "max":1,
              "required": "yes"
            },
            {
              "key": "instance_class",
              "label": "resource type",
              "description": "The instance type for the cluster to run, such as high performance, high performance plus",
              "type": "integer",
              "default": 0,
              "range": [
                0,
                1
              ],
              "required": "yes"
            },
            
            {
              "key": "volume_size",
              "label": "volume_size_label",
              "description": "volume_size_description",
              "type": "integer",
              "default": 10,
              "min": 10,
              "max": 1000,
              "step": 10,
              "required": "yes"
            }
			   
          ]
        }
      ]
    }
  ]
}